{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"env": {
        "CARGO_MANIFEST_DIR": "${workspaceFolder}",
        "RUST_BACKTRACE": "1"
      }
		}
	]
}